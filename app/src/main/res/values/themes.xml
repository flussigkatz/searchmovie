<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SearchMovie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/backgrond_gardient</item>
    </style>

    <style name="ToolBar" parent="MyTheme">
        <item name="android:background">#70000000</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="Recycler" parent="Theme.SearchMovie">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>