<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SearchMovie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkBackground" parent="Theme.SearchMovie">
        <item name="android:textColor">#C1C1C1</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="MainBackground" parent="Theme.SearchMovie">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/backgrond_gardient_dark</item>
    </style>

    <style name="AppBar" parent="MainBackground">
        <item name="android:background">#20000000</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="light_color_text" parent="Theme.SearchMovie">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>