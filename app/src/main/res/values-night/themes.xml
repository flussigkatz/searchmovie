<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SearchMovie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MainBackground" parent="Theme.SearchMovie">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="FragmentBackground" parent="Theme.SearchMovie">
        <item name="android:background">@drawable/background_gradient</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:backgroundTint">@color/black_alpha_40</item>
    </style>

    <style name="Theme.SearchMovie.FilmItemPoster">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="Theme.SearchMovie.TextStyle">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="AppBar" parent="Theme.SearchMovie">
        <item name="android:background">#00000000</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SearchMovie.DetailsAppBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomToolBar" parent="Theme.SearchMovie">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

</resources>