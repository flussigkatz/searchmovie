<resources>
    <!-- Base application theme. -->
    <style name="Theme.SearchMovie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color_2</item>
        <item name="colorPrimaryVariant">@color/app_color_dark_2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_color_1</item>
        <item name="colorSecondaryVariant">@color/app_color_dark_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ScreenBackground" parent="Theme.SearchMovie">
        <item name="android:background">@drawable/background_gradient_dark</item>
    </style>

    <style name="FAB" parent="Theme.SearchMovie">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/app_color_dark_3</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="ProgressBar" parent="Theme.SearchMovie">
        <item name="android:indeterminateTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="CommonBackground" parent="Theme.SearchMovie">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="CommonTextColor" parent="CommonBackground">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="BottomToolBar" parent="Theme.SearchMovie">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemRippleColor">@color/app_color_dark_3</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TabLayoutStyle" parent="Theme.SearchMovie">
        <item name="android:background">@color/transparent</item>
        <item name="tabBackground">@color/black_alpha_20</item>
        <item name="tabIndicatorColor">@color/app_color_2</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/light_gray</item>
    </style>

    <style name="SearchViewTextStyle" parent="Theme.SearchMovie">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="SearchViewStyle" parent="Theme.SearchMovie">
        <item name="android:background">@color/black_alpha_20</item>
        <item name="queryBackground">@color/transparent</item>
    </style>
</resources>